@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

 
    @{
    string userEmail = @HttpContextAccessor.HttpContext.User.Identity.Name;

    }


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-white"  title="Manage">Kullanıcı: @userEmail!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline"  asp-controller="Account" asp-action="Logoff" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Üye Ol </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </li>
}
</ul>
